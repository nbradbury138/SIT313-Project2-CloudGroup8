<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2.View.Page1"
             xmlns:local="clr-namespace:Project2.ViewModel">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="TaskListView" HasUnevenRows="true" Grid.Row="1" SeparatorColor="Black" ItemsSource="{Binding TaskDataList}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>